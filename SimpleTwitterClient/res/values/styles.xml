<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="actionBarStyle">@style/TwitterActionBar</item> -->
        <item name="actionBarItemBackground">@drawable/selectable_background_twitteractionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Twitteractionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Twitteractionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Twitteractionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Twitteractionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Twitteractionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_twitteractionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_twitteractionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Twitteractionbar</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverFlow.Twitteractionbar</item>
    </style>

    <style name="ActionBar.Solid.Twitteractionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_twitteractionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_twitteractionbar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_twitteractionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Twitteractionbar</item>
        <item name="titleTextStyle">@style/TwitterTitleTextStyle</item>
    </style>

    <style name="ActionBar.Transparent.Twitteractionbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_twitteractionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Twitteractionbar</item>
    </style>
	
    <style name="PopupMenu.Twitteractionbar" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_twitteractionbar</item>	
    </style>
	
    <style name="DropDownListView.Twitteractionbar" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_twitteractionbar</item>
    </style>

    <style name="ActionBarTabStyle.Twitteractionbar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_twitteractionbar</item>
        <item name="actionBarTabTextStyle">@style/TwitterTabTextStyle</item>
    </style>
	
    <style name="DropDownNav.Twitteractionbar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_twitteractionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_twitteractionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_twitteractionbar</item>
    </style>
    
    <style name="ProgressBar.Twitteractionbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_twitteractionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Twitteractionbar" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_twitteractionbar</item>
    </style>

    <style name="ActionOverFlow.Twitteractionbar" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Twitteractionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Twitteractionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Twitteractionbar</item>
    </style>

    <!-- custom styles for the action bar -->
    <!-- <style name="TwitterActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/actionbar_background</item>
        <item name="titleTextStyle">@style/TwitterTitleTextStyle</item>
    </style> -->

    <!-- ActionBar title text -->
    <style name="TwitterTitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="showDividers">beginning</item>
    </style>

    <style name="TwitterTabTextStyle"
        	parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_background</item>
    </style>

</resources>
